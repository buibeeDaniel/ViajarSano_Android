<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" android:background="@drawable/fondo" android:gravity="center">
  
  	<!-- Cabecera -->    	
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:gravity="left"  
		android:id="@+id/lfiestaprov"
		android:background="@drawable/fondomenu"
	/> 		
     
    <!-- Titular de la pantalla -->  	   
    <ImageView android:layout_width="fill_parent" android:layout_height="30dip" android:src="@drawable/tit_descargas"></ImageView>
    
        
    <!-- Imágenes para descargar guias  -->    
    	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="90dip"
		android:gravity="left"   
		android:background="#eaeae9"
	 	> 	
	
		      <!-- Africa  -->    
		     <LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="left" android:paddingLeft="20dip" > 		
				<ImageButton  android:id="@+id/button_africa" android:layout_width="130dip" android:layout_height="75dip" android:background="@drawable/descargas_africa" />
		      </LinearLayout>  
		      
		         
		      <!-- Asia  -->    
		     <LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="left" android:paddingLeft="20dip"> 		
				<ImageButton  android:id="@+id/button_asia" android:layout_width="130dip" android:layout_height="75dip" android:background="@drawable/descargas_asia" />
		      </LinearLayout>      
	      
		</LinearLayout>         
		
       <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="90dip"
		android:gravity="left"   
		android:background="#eaeae9"
	 	> 	
	
		      <!-- America  -->    
		     <LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="left" android:paddingLeft="20dip" > 		
				<ImageButton  android:id="@+id/button_america" android:layout_width="130dip" android:layout_height="75dip" android:background="@drawable/descargas_america" />
		      </LinearLayout>  
		      
		         
		      <!-- Europa  -->    
		     <LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="left" android:paddingLeft="20dip"> 		
				<ImageButton  android:id="@+id/button_europa" android:layout_width="130dip" android:layout_height="75dip" android:background="@drawable/descargas_europa" />
		      </LinearLayout>      
	      
		</LinearLayout>      
		
            <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="85dip"
		android:gravity="left"   
		android:background="#eaeae9"
	 	> 	
	
		      <!-- Oceania  -->    
		     <LinearLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="left" android:paddingLeft="20dip" > 		
				<ImageButton  android:id="@+id/button_oceania" android:layout_width="130dip" android:layout_height="75dip" android:background="@drawable/descargas_oceania" />
		      </LinearLayout>  
		       
		</LinearLayout>      
		
     
    
    
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"  android:src="@drawable/patrocinadores"></ImageView>
      	    
  	<!-- Listado y Menú  -->	  
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:baselineAligned="true"  
		android:gravity="bottom"
		android:id="@+id/menuprov">
		
		<util.Menu
	    	android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal" 
		 /> 
	</LinearLayout>

</LinearLayout>
